<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.marvk.chess.ui.application.view.game.GameView">
   <children>
      <HBox>
          <children>
              <VBox fx:id="gamePanel" HBox.hgrow="ALWAYS">
        </VBox>
              <VBox minWidth="200.0" prefHeight="200.0" prefWidth="200.0" spacing="10.0" HBox.hgrow="ALWAYS">
                  <children>
                      <HBox VBox.vgrow="ALWAYS">
                          <children>
                              <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#next" text="Next" HBox.hgrow="ALWAYS">
                                  <HBox.margin>
                                      <Insets />
                                  </HBox.margin>
                              </Button>
                          </children>
                      </HBox>
                      <HBox prefHeight="100.0" prefWidth="200.0">
                          <children>
                              <ToggleButton fx:id="auto" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Auto" HBox.hgrow="ALWAYS" />
                          </children>
                      </HBox>
                  </children>
                  <HBox.margin>
                      <Insets />
                  </HBox.margin>
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
              </VBox>
          </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <ChoiceBox fx:id="whiteChoiceBox" prefWidth="150.0" />
            <Label text="vs" />
            <ChoiceBox fx:id="blackChoiceBox" prefWidth="150.0" />
             <Button fx:id="startButton" mnemonicParsing="false" onAction="#start" text="Start" />
             <Button fx:id="abortButton" mnemonicParsing="false" onAction="#abort" text="Abort" />
         </children>
      </HBox>
   </children>
</VBox>
